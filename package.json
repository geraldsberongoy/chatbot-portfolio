{
  "name": "gerald-portfolio-chatbot",
  "version": "1.0.0",
  "description": "A chatbot for Gerald's portfolio website",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node microservice-server.js",
    "dev": "nodemon microservice-server.js",
